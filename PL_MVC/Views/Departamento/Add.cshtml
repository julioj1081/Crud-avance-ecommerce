
@{
    ViewBag.Title = "Add";
}
@model ML.Departamento


<h2>Add Departamento</h2>


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h5>Departamento</h5>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("Registro", "Departamento", FormMethod.Post))
            {
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-3">
                            <label>Nombre:</label>
                            @Html.TextBoxFor(model => model.NombreD, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.NombreD)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.LabelFor(model => model.IdArea)
                            @Html.TextBoxFor(model => model.IdArea, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.IdArea)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <input type="submit" value="Agregar Departamento" class="btn btn-primary" />
                            @Html.ActionLink("Regresar", "GetAllDepartamento", "Departamento", htmlAttributes: new { @class = "btn btn-danger" })
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
        </div>
    </div>
</div>