@model ML.Departamento
@{
    ViewBag.Title = "Update";
}


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Update Departamento</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("Actualizar", "Departamento", FormMethod.Post))
            {
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.LabelFor(model => model.IdDepartamento, new { @class = "control-label col-md-2" })
                            @Html.TextBoxFor(model => model.IdDepartamento, new { @class = "form-control", @type = "disabled" })
                        </div>

                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.LabelFor(model => model.NombreD, new { @class = "form-control" })
                            @Html.TextBoxFor(model => model.NombreD, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">

                        <div class="col-md-3">
                            @Html.LabelFor(model => model.IdArea, new { @class = "form-control" })
                            @Html.TextBoxFor(model => model.IdArea, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <input type="submit" class="btn btn-primary" value="Modificar" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
