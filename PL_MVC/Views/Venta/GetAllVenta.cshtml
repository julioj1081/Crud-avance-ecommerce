
@{
    ViewBag.Title = "GetAllVenta";
}
@model ML.Venta
<h2>GetAllVenta</h2>

<div class="container">
    <div class="row">
        <div style="float:right; margin-bottom: 1rem;">
            @Html.ActionLink("Agregar venta", "Add", "Venta", htmlAttributes:new { @class="btn btn-success"})
        </div>
    </div>
    <table class="table table-bordered table-hover table-responsive">
        <thead>
            <tr>
                @*<td>Modificar</td>*@
                <td>Id Venta</td>
                <td>Cliente</td>
                <td>Total</td>
                <td>Metodo de pago</td>
                <td>Fecha</td>
                <td>Eliminar</td>
            </tr>
        </thead>
        <tbody>
            @foreach (ML.Venta venta in Model.Ventas)
            {
            <tr>
                @*<td><a class="btn btn-warning glyphicon glyphicon-edit" href="@Url.Action("Update", "Venta", new { Id = venta.IdVenta })"></a></td>*@
                <td>@venta.IdVenta</td>
                <td>@venta.Cliente.Nombre</td>
                <td>@venta.Total</td>
                <td>@venta.MetodoPago.Metodo</td>
                <td>@venta.Fecha</td>
                <td><a class="btn btn-danger glyphicon glyphicon-trash" href="@Url.Action("Delete", "Venta", new { IdVenta = venta.IdVenta})" onclick="return confirm('Estas seguro que deseas eliminar este registro?');" ;></a></td>
            </tr>
            }
        </tbody>
    </table>
</div>
